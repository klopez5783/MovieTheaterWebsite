@model IEnumerable<MovieTheater.Director>

@{
    ViewBag.Title = "ListDirectors";
}

<h2>ListDirectors</h2>

<p>
    @Html.ActionLink("Create New", "AddDirector")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DirectorID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DirectorID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditDirector", new { id = item.DirectorID }) |
            @Html.ActionLink("Details", "DirectorDetails", new { id = item.DirectorID }) |
            @Html.ActionLink("Delete", "DeleteDirector", new { id = item.DirectorID })
        </td>
    </tr>
}

</table>
